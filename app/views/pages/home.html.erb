<div class="banner" style= "background-image: linear-gradient(rgba(94,21,19,0.5),rgba(94,21,19,0.5)), url(<%=image_path "background.jpg" %>);">
  <div class="container">
    <div class="logo">
      <%= image_tag "logo.png", alt: "logo" %>
    </div>
    <h1>Yo! That's <strong>lit</strong></h1>
    <p>Lit up your life.</p>
    <div class="d-flex justify-content-center">
      <div class="search-form">
        <!-- find text_field changer plugin!!! -->
        <%= form_tag instruments_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        placeholder: "Find an instrument"
        %>
        <%= text_field_tag :begin_date,
        params[:begin_date],
        placeholder: "begin date", class:"datepicker"
        %>
        <%= text_field_tag :end_date,
        params[:end_date],
        placeholder: "end date", class:"datepicker"
        %>
        <button><i class="fas fa-search"></i></button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="categories-container">
  <h3>Categories</h3>
  <div class="category-cards mx-auto">
    <% @categories.each do |category| %>
    <%= link_to instruments_path(category: category.name), class: "card-link" do %>
    <div class="category-card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= cl_image_path category.photo.key, height: 300, width: 200, crop: :fill %>)">
      <p><%= category.name %></p>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<div class="homepage-cards-container m-5">
  <h3>Instruments</h3>
  <div class="homepage-cards mx-auto">
    <% @instruments.each do |instrument| %>
      <%= render "instruments/card", instrument: instrument %>
      <% end %>
    </div>
  </div>
</div>
