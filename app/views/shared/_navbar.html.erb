          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, :class => "nav-link" %></a>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, :class => "nav-link" %></a>
          </li>
        </div>
        <% end %>
      </ul>
    </div>
