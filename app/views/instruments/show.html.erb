<!-- tiny change -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @instrument.photos[0].key, height: 300, width: 400, crop: :fill, class:"d-block w-100" %>
        </div>
        <% @instrument.photos.each_with_index do |photo, index| %>
        <% if index >= 1 %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class:"d-block w-100" %>
        </div>
        <% end %>
        <% end %>
      </div>
       <% if @instrument.photos.count >= 2 %>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% end %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="container">
